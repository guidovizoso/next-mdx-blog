{
  "name": "next-blog",
  "version": "0.0.0",
  "description": "next-blog",
  "main": "src/index.js",
  "source": "src/index.js",
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "scripts": {
    "test": "jest",
    "lint": "xo"
  },
  "devDependencies": {
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "xo": "^0.23.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "xo": {
    "env": [
      "dom",
      "jest"
    ],
    "extends": [
      "prettier"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@mdx-js/mdx": "^0.15.5",
    "glob": "^7.1.3",
    "rss": "^1.2.2"
  }
}
